<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.recipeDetails.DetailsFragment">

    <ImageView
        android:id="@+id/details_image_url"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/details_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_image_url"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_dish_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_name"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_cuisine_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_dish_type"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_meal_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_cuisine_type"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_ingredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_meal_type"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_source"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_ingredients"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/details_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/old_school_adventures"
        android:maxLines="2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/details_name"
        app:layout_constraintStart_toStartOf="@+id/details_name"
        app:layout_constraintTop_toBottomOf="@id/details_source"
        tools:text="@tools:sample/lorem/random" />
</androidx.constraintlayout.widget.ConstraintLayout>